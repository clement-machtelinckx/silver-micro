{% extends 'base.html.twig' %}

{% block title %}Resto-Resa Profil{% endblock %}

{% block body %}
<div class="container">
    <h1>Bienvenue sur votre profile</h1>
    <p>{{ user.email }}</p>

    <h2>Vos r√©servation</h2>
    <table class="table table-hover mt-4">
        <thead>
            <tr class="bg-primary text-white">
                <th scope="col">DATE</th>
                <th scope="col">restaurant</th>
                <th scope="col">nb de Guest</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr class="table-active">
                    <td>{{ reservation.dateTime.format('Y-m-d H:i:s') }}</td>
                    <td>{{ reservation.restaurant.name }}</td>
                    <td>{{ reservation.nbOfGuests }}</td>
                    <td class="d-flex flex-row ">
                        <a href="{{ path('restaurant.show', {'id': reservation.restaurant.id}) }}" class="btn btn-success">Infos</a>

                        <form action="{{ path('reservation.del', {'id': reservation.id}) }}" method="post">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
