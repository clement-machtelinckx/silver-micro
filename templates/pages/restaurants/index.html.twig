{% extends 'base.html.twig' %}

{% block title %}Resto-Resa List{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Restaurant Liste</h1>
    <small>
        <div class="count mt-4">
            <p>{{ restaux.getTotalItemCount }} restaurant are load </p> 
        </div>
    </small>
    <table class="table table-hover mt-4">
        <thead>
            <tr class="bg-primary text-white">
                <th scope="col">Nom</th>
                <th scope="col">Adresse</th>
                <th scope="col">Telephone</th>
                <th scope="col">Cuisine</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for restau in restaux %}
                <tr class="table-active">
                    <td>{{ restau.name }}</td>
                    <td>{{ restau.adresse }}</td>
                    <td>{{ restau.phone }}</td>
                    <td>{{ restau.cuisine }}</td>
                    <td>
                        <a href="{{ path('restaurant.show', {'id': restau.id}) }}" class="btn btn-success">Infos</a>
                        <a href="{{ path('reservation.new', {'id': restau.id}) }}" class="btn btn-warning">Reservation</a>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(restaux) }}
    </div>
</div>
{% endblock %}
